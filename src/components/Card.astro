---
import { Image } from "astro:assets";

type Props = {
  id: string;
  name: string;
  artist: string;
  image_url: string;
};

const { id, name, artist, image_url } = Astro.props;
---

<div class="flex flex-col">
  <a
    href={`/albums/${id}`}
    class="text-white hover:text-gray-300 group transition-all duration-300 ease-in-out"
  >
    <div
      class="shadow-md hover:shadow-lg relative"
      transition:name={`record-${id}`}
    >
      <Image
        class="card-image aspect-square rounded-md relative z-10 group-hover:scale-105 transition-all duration-300 ease-in-out"
        src={image_url}
        alt={name}
        width="400"
        height="400"
      />
      <Image
        src="/vynil-lp.webp"
        alt="A vynil lp used for a fun animation."
        width="400"
        height="400"
        transition:name={`vinyl-${id}`}
        class="absolute top-0 vynil-image opacity-0"
      />
    </div>
    <p class="pt-4 font-semibold">{name}</p>
    <p class="pt-1">{artist}</p>
  </a>
</div>
